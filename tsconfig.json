{
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "types"],
    "noImplicitAny": false,
    "lib": ["ES2015", "dom"],
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "noImplicitReturns": false
  },
  "include": ["src"]
}
